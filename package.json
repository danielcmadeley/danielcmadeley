{
  "name": "",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "build:astro": "bunx astro build",
    "build:pagefind": "echo 'Starting pagefind indexing...' && echo \"Build timestamp: $(date)\" && bunx --version && bunx pagefind --version && bunx pagefind --verbose && echo 'Pagefind indexing completed!'",
    "build:pagefind:bust": "bun run build:pagefind && bun scripts/cache-bust-pagefind.js",
    "build": "npm-run-all -s build:astro build:pagefind:bust",
    "copy:pagefind:dev": "bunx shx cp -r dist/pagefind public/",
    "dev:astro": "bunx astro dev",
    "dev": "npm-run-all -s build:pagefind copy:pagefind:dev dev:astro",
    "dev:build": "npm-run-all -s build dev",
    "preview": "bunx astro preview",
    "astro": "bunx astro",
    "validate:feeds": "bun run scripts/validate-feeds.js"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.0",
    "@astrojs/react": "^4.3.0",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.4.1",
    "@astrojs/vercel": "^8.2.1",
    "@openpanel/astro": "^1.0.1",
    "@radix-ui/react-dialog": "^1.1.14",
    "@tailwindcss/vite": "^4.1.11",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "astro": "^5.11.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.525.0",
    "pagefind": "^1.3.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hotkeys-hook": "^5.1.0",
    "rehype-mathjax": "^7.1.0",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.12",
    "npm-run-all": "^4.1.5",
    "react-email": "4.1.0",
    "shx": "^0.4.0",
    "tw-animate-css": "^1.3.5"
  }
