---
import Layout from "./Layout.astro";

const {
    title,
    description,
    pubDate,
    author = "Daniel Madeley",
    tags = [],
} = Astro.props.frontmatter || Astro.props;
---

<Layout title={title}>
    <div data-pagefind-body>
        <nav class="mb-8">
            <a
                href="/blog"
                class="inline-flex items-center gap-2 text-stone-400 hover:text-stone-100 transition-colors"
            >
                <svg
                    class="w-4 h-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M15 19l-7-7 7-7"></path>
                </svg>
                Thoughts & Writings
            </a>
        </nav>

        <div class="max-w-4xl mx-auto">
            <header class="mb-12">
                <h1
                    class="text-4xl font-bold text-stone-100 mb-4"
                    data-pagefind-meta="title"
                >
                    {title}
                </h1>

                {
                    description && (
                        <p
                            class="text-xl text-stone-400 mb-6"
                            data-pagefind-meta="description"
                        >
                            {description}
                        </p>
                    )
                }

                <div
                    class="flex flex-wrap items-center gap-4 text-sm text-stone-500"
                >
                    <time datetime={pubDate} data-pagefind-meta="date">
                        {
                            new Date(pubDate).toLocaleDateString("en-US", {
                                year: "numeric",
                                month: "long",
                                day: "numeric",
                            })
                        }
                    </time>

                    {
                        author && (
                            <span data-pagefind-meta="author">By {author}</span>
                        )
                    }

                    {
                        tags.length > 0 && (
                            <>
                                <div class="hidden" data-pagefind-meta="tags">
                                    {tags.join(", ")}
                                </div>
                                <div class="flex gap-2">
                                    {tags.map((tag: string) => (
                                        <span
                                            class="px-2 py-1 bg-stone-800 text-stone-300 rounded-full text-xs"
                                            data-pagefind-filter="tag"
                                        >
                                            {tag}
                                        </span>
                                    ))}
                                </div>
                            </>
                        )
                    }
                </div>
            </header>

            <article class="space-y-8">
                <slot />
            </article>
        </div>
    </div>
</Layout>

<style>
    /* Global spacing for all direct children */
    article > * {
        margin-bottom: 2rem;
    }

    article h1 {
        font-size: 2.25rem;
        font-weight: 700;
        color: #f5f5f4;
        margin-bottom: 1.5rem;
        margin-top: 3rem;
        line-height: 1.25;
    }

    article h2 {
        font-size: 1.875rem;
        font-weight: 700;
        color: #f5f5f4;
        margin-bottom: 1.5rem;
        margin-top: 4rem;
        line-height: 1.25;
    }

    article h3 {
        font-size: 1.5rem;
        font-weight: 600;
        color: #e7e5e4;
        margin-bottom: 1rem;
        margin-top: 3rem;
        line-height: 1.375;
    }

    article h4 {
        font-size: 1.25rem;
        font-weight: 600;
        color: #e7e5e4;
        margin-bottom: 0.75rem;
        margin-top: 2rem;
        line-height: 1.375;
    }

    article p {
        color: #d6d3d1;
        font-size: 1.125rem;
        line-height: 1.625;
        margin-bottom: 1.5rem;
    }

    article ul,
    article ol {
        color: #d6d3d1;
        font-size: 1.125rem;
        line-height: 1.625;
        margin-bottom: 1.5rem;
        margin-left: 1.5rem;
    }

    article li {
        margin-bottom: 0.5rem;
    }

    article ul li {
        list-style-type: disc;
    }

    article ol li {
        list-style-type: decimal;
    }

    article a {
        color: #f5f5f4;
        text-decoration: underline;
        transition: color 0.2s ease;
    }

    article a:hover {
        color: #d6d3d1;
    }

    article code {
        background-color: #292524;
        color: #e7e5e4;
        padding: 0.25rem 0.5rem;
        border-radius: 0.25rem;
        font-size: 0.875rem;
    }

    article pre {
        background-color: #292524;
        color: #e7e5e4;
        padding: 1.5rem;
        border-radius: 0.5rem;
        overflow-x: auto;
        margin-top: 2rem;
        margin-bottom: 2rem;
    }

    article pre code {
        background-color: transparent;
        padding: 0;
    }

    article blockquote {
        border-left: 4px solid #57534e;
        padding-left: 1.5rem;
        font-style: italic;
        color: #a8a29e;
        margin-top: 2rem;
        margin-bottom: 2rem;
    }

    article strong {
        font-weight: 600;
        color: #f5f5f4;
    }

    article img {
        border-radius: 0.5rem;
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        margin-top: 2rem;
        margin-bottom: 2rem;
    }

    article hr {
        border-color: #57534e;
        margin-top: 2rem;
        margin-bottom: 2rem;
    }

    /* First heading should have no top margin */
    article > h1:first-child,
    article > h2:first-child,
    article > h3:first-child {
        margin-top: 0;
    }

    /* Better spacing after headings */
    article h1 + p,
    article h2 + p,
    article h3 + p,
    article h4 + p {
        margin-top: 0.5rem;
    }

    /* Override global spacing for specific combinations */
    article h1 + *,
    article h2 + *,
    article h3 + *,
    article h4 + * {
        margin-top: 1rem;
    }

    article p + ul,
    article p + ol {
        margin-top: 0;
    }

    article ul + p,
    article ol + p {
        margin-top: 1.5rem;
    }

    /* MathJax styling for rehype-mathjax output */
    article mjx-container {
        margin: 0.5rem 0;
    }

    article mjx-container[display="block"] {
        margin: 2rem 0;
        text-align: center;
        display: block;
    }

    article mjx-container[display="inline"] {
        margin: 0 0.2rem;
        display: inline;
    }

    article mjx-container svg {
        display: inline !important;
        color: #f5f5f4;
    }

    /* Math block spacing */
    article p + mjx-container[display="block"] {
        margin-top: 1.5rem;
    }

    article mjx-container[display="block"] + p {
        margin-top: 1.5rem;
    }

    /* Ensure math text is readable */
    article mjx-math {
        color: #f5f5f4 !important;
    }
</style>
