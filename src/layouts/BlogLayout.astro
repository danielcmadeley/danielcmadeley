---
import Layout from "./Layout.astro";
import ViewTracker from "../components/ViewTracker.tsx";

const {
    title,
    description,
    pubDate,
    author = "Daniel Madeley",
    tags = [],
} = Astro.props.frontmatter || Astro.props;
---

<Layout
    title={title}
    description={description}
    author={author}
    keywords={tags.join(", ")}
    image="https://danielcmadeley.vercel.app/favicon.svg"
>
    <!-- Reading Progress Indicator -->
    <div
        id="reading-progress"
        class="fixed top-0 left-0 h-[2px] bg-neutral-400 z-[9999]"
        style="width: 0%; opacity: 0;"
        aria-hidden="true"
    ></div>

    <div data-pagefind-body>
        <!-- Back nav -->
        <nav class="mb-10">
            <a
                href="/thoughts-and-writings"
                class="inline-flex items-center gap-2 text-sm text-neutral-500 hover:text-neutral-200 transition-colors"
            >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
                Back to all posts
            </a>
        </nav>

        <!-- Article header -->
        <header class="mb-12 max-w-3xl">
            <div class="flex flex-wrap items-center gap-3 text-sm text-neutral-500 mb-6">
                <time datetime={pubDate} data-pagefind-meta="date">
                    {
                        new Date(pubDate).toLocaleDateString("en-US", {
                            year: "numeric",
                            month: "long",
                            day: "numeric",
                        })
                    }
                </time>

                {author && (
                    <>
                        <span class="text-neutral-700">&middot;</span>
                        <span data-pagefind-meta="author">{author}</span>
                    </>
                )}

                <span class="text-neutral-700">&middot;</span>
                <ViewTracker client:only="react" slug={Astro.url.pathname.split("/").filter(Boolean).pop() || ""} />
            </div>

            <h1
                class="text-4xl md:text-5xl font-bold text-neutral-100 leading-tight mb-6"
                data-pagefind-meta="title"
            >
                {title}
            </h1>

            {description && (
                <p class="text-xl text-neutral-400 leading-relaxed" data-pagefind-meta="description">
                    {description}
                </p>
            )}

            {tags.length > 0 && (
                <div class="flex flex-wrap gap-2 mt-6">
                    <div class="hidden" data-pagefind-meta="tags">{tags.join(", ")}</div>
                    {tags.map((tag: string) => (
                        <span
                            class="px-3 py-1 text-xs rounded-full border border-neutral-800 text-neutral-400"
                            data-pagefind-filter="tag"
                        >
                            {tag}
                        </span>
                    ))}
                </div>
            )}
        </header>

        <hr class="border-neutral-800 mb-12" />

        <!-- Two-column layout: content + TOC -->
        <div class="flex gap-16">
            <!-- Article content -->
            <article class="flex-1 min-w-0 max-w-3xl" id="article-content">
                <slot />
            </article>

            <!-- Table of Contents sidebar -->
            <aside class="hidden lg:block w-56 shrink-0">
                <div class="sticky top-24">
                    <h4 class="text-xs font-semibold text-neutral-500 uppercase tracking-wider mb-4">
                        On this page
                    </h4>
                    <nav id="toc" class="space-y-1" aria-label="Table of contents">
                        <!-- Populated by JS -->
                    </nav>
                </div>
            </aside>
        </div>
    </div>
</Layout>

<script
    type="application/ld+json"
    set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "BlogPosting",
        headline: title,
        description: description,
        author: {
            "@type": "Person",
            name: author,
        },
        datePublished: pubDate,
        dateModified: pubDate,
        image: "https://danielcmadeley.vercel.app/favicon.svg",
        url: `https://danielcmadeley.vercel.app${Astro.url.pathname}`,
        mainEntityOfPage: {
            "@type": "WebPage",
            "@id": `https://danielcmadeley.vercel.app${Astro.url.pathname}`,
        },
        publisher: {
            "@type": "Organization",
            name: "Daniel Madeley",
            logo: {
                "@type": "ImageObject",
                url: "https://danielcmadeley.vercel.app/favicon.svg",
            },
        },
        keywords: tags.join(", "),
        articleSection: "Technology",
    })}
/>

<style>
    /* Article typography */
    article > :global(*) {
        margin-bottom: 2rem;
    }

    article :global(h1) {
        font-size: 2.25rem;
        font-weight: 700;
        color: #f5f5f5;
        margin-bottom: 1.5rem;
        margin-top: 3rem;
        line-height: 1.25;
    }

    article :global(h2) {
        font-size: 1.5rem;
        font-weight: 700;
        color: #f5f5f5;
        margin-bottom: 1rem;
        margin-top: 3rem;
        line-height: 1.3;
        padding-top: 1rem;
    }

    article :global(h3) {
        font-size: 1.25rem;
        font-weight: 600;
        color: #e5e5e5;
        margin-bottom: 0.75rem;
        margin-top: 2.5rem;
        line-height: 1.375;
    }

    article :global(h4) {
        font-size: 1.125rem;
        font-weight: 600;
        color: #e5e5e5;
        margin-bottom: 0.5rem;
        margin-top: 2rem;
        line-height: 1.375;
    }

    article :global(p) {
        color: #d4d4d4;
        font-size: 1.0625rem;
        line-height: 1.75;
        margin-bottom: 1.5rem;
    }

    article :global(ul),
    article :global(ol) {
        color: #d4d4d4;
        font-size: 1.0625rem;
        line-height: 1.75;
        margin-bottom: 1.5rem;
        margin-left: 1.5rem;
    }

    article :global(li) {
        margin-bottom: 0.5rem;
    }

    article :global(ul li) {
        list-style-type: disc;
    }

    article :global(ol li) {
        list-style-type: decimal;
    }

    article :global(a) {
        color: #f5f5f5;
        text-decoration: underline;
        text-underline-offset: 3px;
        text-decoration-color: #525252;
        transition: text-decoration-color 0.2s ease;
    }

    article :global(a:hover) {
        text-decoration-color: #d4d4d4;
    }

    article :global(code) {
        background-color: #262626;
        color: #e5e5e5;
        padding: 0.2rem 0.4rem;
        border-radius: 0.25rem;
        font-size: 0.875rem;
    }

    article :global(pre) {
        background-color: #171717;
        color: #e5e5e5;
        padding: 1.5rem;
        border-radius: 0.75rem;
        overflow-x: auto;
        margin-top: 2rem;
        margin-bottom: 2rem;
        border: 1px solid #262626;
    }

    article :global(pre code) {
        background-color: transparent;
        padding: 0;
    }

    article :global(blockquote) {
        border-left: 3px solid #404040;
        padding-left: 1.5rem;
        font-style: italic;
        color: #a3a3a3;
        margin-top: 2rem;
        margin-bottom: 2rem;
    }

    article :global(strong) {
        font-weight: 600;
        color: #f5f5f5;
    }

    article :global(img) {
        border-radius: 0.75rem;
        margin-top: 2rem;
        margin-bottom: 2rem;
    }

    article :global(hr) {
        border-color: #262626;
        margin-top: 2rem;
        margin-bottom: 2rem;
    }

    /* First heading no top margin */
    article > :global(h1:first-child),
    article > :global(h2:first-child),
    article > :global(h3:first-child) {
        margin-top: 0;
        padding-top: 0;
    }

    /* Spacing after headings */
    article :global(h1 + *),
    article :global(h2 + *),
    article :global(h3 + *),
    article :global(h4 + *) {
        margin-top: 1rem;
    }

    article :global(p + ul),
    article :global(p + ol) {
        margin-top: 0;
    }

    article :global(ul + p),
    article :global(ol + p) {
        margin-top: 1.5rem;
    }

    /* MathJax */
    article :global(mjx-container) {
        margin: 0.5rem 0;
    }

    article :global(mjx-container[display="block"]) {
        margin: 2rem 0;
        text-align: center;
        display: block;
    }

    article :global(mjx-container[display="inline"]) {
        margin: 0 0.2rem;
        display: inline;
    }

    article :global(mjx-container svg) {
        display: inline !important;
        color: #f5f5f5;
    }

    article :global(p + mjx-container[display="block"]) {
        margin-top: 1.5rem;
    }

    article :global(mjx-container[display="block"] + p) {
        margin-top: 1.5rem;
    }

    article :global(mjx-math) {
        color: #f5f5f5 !important;
    }

    /* Tables */
    article :global(table) {
        width: 100%;
        border-collapse: collapse;
        margin: 2rem 0;
        background-color: #171717;
        border-radius: 0.75rem;
        overflow: hidden;
        border: 1px solid #262626;
    }

    article :global(th),
    article :global(td) {
        padding: 0.75rem 1rem;
        text-align: left;
        border-bottom: 1px solid #262626;
        color: #e5e5e5;
    }

    article :global(th) {
        background-color: #0a0a0a;
        font-weight: 600;
        color: #f5f5f5;
        border-bottom: 1px solid #404040;
    }

    article :global(tr:last-child td) {
        border-bottom: none;
    }

    article :global(tr:hover) {
        background-color: rgba(64, 64, 64, 0.3);
    }

    @media (max-width: 768px) {
        article :global(table) {
            font-size: 0.875rem;
        }

        article :global(th),
        article :global(td) {
            padding: 0.5rem 0.75rem;
        }
    }

    /* TOC link styles */
    #toc :global(a) {
        display: block;
        padding: 0.25rem 0;
        padding-left: 0.75rem;
        font-size: 0.8125rem;
        line-height: 1.5;
        color: #737373;
        text-decoration: none;
        border-left: 2px solid transparent;
        transition: all 0.15s ease;
    }

    #toc :global(a:hover) {
        color: #d4d4d4;
    }

    #toc :global(a.active) {
        color: #f5f5f5;
        border-left-color: #f5f5f5;
    }

    #toc :global(a.toc-h3) {
        padding-left: 1.5rem;
        font-size: 0.75rem;
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Reading progress
        const progressBar = document.getElementById("reading-progress");
        if (progressBar) {
            function updateProgress() {
                const scrollTop = window.scrollY || document.documentElement.scrollTop;
                const docHeight = document.documentElement.scrollHeight;
                const winHeight = window.innerHeight;
                const scrollableHeight = docHeight - winHeight;

                if (scrollableHeight <= 0) {
                    progressBar.style.width = "100%";
                    progressBar.style.opacity = "1";
                    return;
                }

                const progress = Math.min(100, (scrollTop / scrollableHeight) * 100);
                progressBar.style.width = `${progress}%`;
                progressBar.style.opacity = scrollTop > 50 ? "1" : "0";
            }

            window.addEventListener("scroll", updateProgress, { passive: true });
            window.addEventListener("resize", updateProgress, { passive: true });
            updateProgress();
        }

        // Table of Contents generation
        const article = document.getElementById("article-content");
        const tocNav = document.getElementById("toc");
        if (!article || !tocNav) return;

        const headings = article.querySelectorAll("h2, h3");
        if (headings.length === 0) {
            const aside = tocNav.closest("aside");
            if (aside) aside.style.display = "none";
            return;
        }

        const tocLinks: HTMLAnchorElement[] = [];

        headings.forEach((heading, i) => {
            // Ensure heading has an id
            if (!heading.id) {
                heading.id = `heading-${i}`;
            }

            const link = document.createElement("a");
            link.href = `#${heading.id}`;
            link.textContent = heading.textContent || "";
            if (heading.tagName === "H3") {
                link.classList.add("toc-h3");
            }

            link.addEventListener("click", (e) => {
                e.preventDefault();
                heading.scrollIntoView({ behavior: "smooth", block: "start" });
                history.replaceState(null, "", `#${heading.id}`);
            });

            tocNav.appendChild(link);
            tocLinks.push(link);
        });

        // Intersection observer for active state
        const observer = new IntersectionObserver(
            (entries) => {
                entries.forEach((entry) => {
                    if (entry.isIntersecting) {
                        const id = entry.target.id;
                        tocLinks.forEach((link) => {
                            link.classList.toggle("active", link.getAttribute("href") === `#${id}`);
                        });
                    }
                });
            },
            {
                rootMargin: "-80px 0px -70% 0px",
                threshold: 0,
            }
        );

        headings.forEach((heading) => observer.observe(heading));
    });
</script>
