---
import Search from "./Search.astro";
---

<nav
    class="fixed top-0 left-0 right-0 z-50 bg-stone-900/80 backdrop-blur-md border-b border-stone-800"
>
    <div class="max-w-6xl mx-auto px-6 py-4">
        <div class="flex items-center justify-between">
            <!-- Logo/Brand -->
            <div class="flex items-center space-x-2">
                <a
                    href="/"
                    class="text-xl font-bold text-stone-100 hover:text-stone-300 transition-colors"
                >
                    Daniel Madeley
                </a>
            </div>

            <!-- Navigation Links -->
            <div class="hidden md:flex items-center space-x-8">
                <a
                    href="/"
                    class="text-stone-300 hover:text-stone-100 transition-colors"
                >
                    Home
                </a>
                <a
                    href="/blog"
                    class="text-stone-300 hover:text-stone-100 transition-colors"
                >
                    Blog
                </a>
                <a
                    href="/projects"
                    class="text-stone-300 hover:text-stone-100 transition-colors"
                >
                    Projects
                </a>
                <a
                    href="/about"
                    class="text-stone-300 hover:text-stone-100 transition-colors"
                >
                    About
                </a>
            </div>

            <!-- Search and Mobile Menu -->
            <div class="flex items-center space-x-4">
                <!-- Search Component -->
                <div class="hidden md:block">
                    <Search />
                </div>

                <!-- Mobile Menu Button -->
                <button
                    id="mobile-menu-button"
                    class="md:hidden p-2 text-stone-300 hover:text-stone-100 transition-colors"
                    aria-label="Toggle mobile menu"
                >
                    <svg
                        class="w-6 h-6"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </button>
            </div>
        </div>

        <!-- Mobile Menu -->
        <div
            id="mobile-menu"
            class="md:hidden mt-4 pb-4 border-t border-stone-800 hidden"
        >
            <div class="flex flex-col space-y-4 pt-4">
                <a
                    href="/"
                    class="text-stone-300 hover:text-stone-100 transition-colors"
                >
                    Home
                </a>
                <a
                    href="/blog"
                    class="text-stone-300 hover:text-stone-100 transition-colors"
                >
                    Blog
                </a>
                <a
                    href="/projects"
                    class="text-stone-300 hover:text-stone-100 transition-colors"
                >
                    Projects
                </a>
                <a
                    href="/about"
                    class="text-stone-300 hover:text-stone-100 transition-colors"
                >
                    About
                </a>
            </div>
        </div>
    </div>
</nav>

<script>
    // Mobile menu toggle
    const mobileMenuButton = document.getElementById("mobile-menu-button");
    const mobileMenu = document.getElementById("mobile-menu");

    mobileMenuButton?.addEventListener("click", () => {
        mobileMenu?.classList.toggle("hidden");
    });
</script>
